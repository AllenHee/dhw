        </div>
    </div>
    <!--分类栏 结束-->
    <!--定制你的生活 开始-->
    @{ 
        var li = ViewBag.li as DHW.Web.Srdz.Controllers.Srdz_Index[];
    }
    <div class="pic_show">
        <h2>
            定制你的生活</h2>
        <div class="pic_show_all">
            <div class="pic_show_slide">
                <ul class="pic_show_ul">
                    @for (int i = 0; i < li.Length; i++)
                    {
                        if (i % 8 == 0 && i != 0)
                        {
                        @Html.Raw("                </ul>\r\n                <ul class=\"pic_show_ul\">")    
                        }
                        var item = ViewBag.li[i];
                        <li class="pic_show_items @if (i % 4 == 3)
                                                  {<text>pic_show_items-last</text>}"><a href="/Detail/@item.id">
                            <img src="@BaseConfigs.GetImgPath@item.img" alt=""></a>
                            <p class="rmb">
                                <span>¥</span>@item.price</p>
                            <a class="pic_show_intro" href="/Detail/@item.id">@item.title</a> </li>                      
                    }
                </ul>
            </div>
        </div>
        <div class="left_arrow">
            <p>
            </p>
        </div>
        <div class="right_arrow">
            <p>
            </p>
        </div>
    </div>
    <!--定制你的生活 结束-->
    <!--优质定制店推荐 开始-->
