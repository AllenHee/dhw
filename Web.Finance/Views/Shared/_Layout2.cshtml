@{
    var AdvertList = DHW.Web.Controllers.Advert.AdvertShowList(5, "kj", "会计首页横幅"); 
}
@{ Layout = "~/Views/Shared/_Layout.cshtml";}
<!--头部 开始-->
<div class="header">
    <!--头部主内容 开始-->
    <div class="header-main clearfix">
        <div class="header-m-l">
            <a href="/">
                <h1>
                    <img src="@Html.Raw(BaseConfigs.GetUrlCdn)kuaiji/images/kuaiji_logo.jpg" alt="梦高速 - 会计"></h1>
            </a>
        </div>
        <div class="header-m-r">
            <div class="header-search clearfix">
                <form action="#">
                <span></span>
                <input type="text" id="searchValue" placeholder="请输入关键词">
                <button type="button" onclick="search()">
                    搜索</button>
                </form>
            </div>
        </div>
    </div>
    <!--头部主内容 结束-->
    <!--头部轮播 开始-->
    <div class="slide-bg">
        <div class="slide">
            <ul class="slide-wrap">
                @for (int i = 0; i < @AdvertList.Rows.Count; i++)
                {
                    var clss = "slide_bg" + (i + 1);
                    var imgs = @AdvertList.Rows[i]["img"] + ".jpg"; 
                    <a class="@clss" href="@AdvertList.Rows[i]["url"]" target="_blank">
                        <li>
                            <img src="@{@BaseConfigs.GetImgPath}@imgs" alt="会计首页横幅广告"></li></a>
                }
            </ul>
            <a class="s-prev" href="#"></a><a class="s-next" href="#"></a>
            <div class="slider">
                <ul class="clearfix">
                    <li class="current"></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li class="last"></li>
                </ul>
            </div>
        </div>
    </div>
    <!--头部轮播 结束-->
    @RenderPage("~/Views/Shared/Nav.cshtml")
</div>
<!--头部 结束-->
@RenderBody()
@section scripts{
    <script src="@{@BaseConfigs.GetUrlCdn}scripts/jquery.placeholder.js"></script>
    <script src="@BaseConfigs.GetStaticPath/scripts/jquery.slider.js"></script>
    <script src="@BaseConfigs.GetStaticPath/scripts/template.js"></script>
    @RenderSection("scripts", required: false)
}
