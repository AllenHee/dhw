      <img src="{{domain+comment.userimage}}_100x100.jpg" alt="{{comment.username}}">
      <p class="fbly_items_time"><a href="{{comment.id}}">{{comment.username}} </a>留言于 {{comment.time}}</p>
      <p>{{comment.commemt}}</p>
    </li>
    {{/each}}
    </script>
    <script type="text/html" id="cytg">
    {{each data as tg}}
    <li class="cytg_group clearfix">
      <div class="cytg_l">
        <div class="cytg_l_img"><img src="{{domain+tg.img}}_100x100.jpg" alt="#"></div>
        <div class="cytg_l_text">
          <div><a href="{{tg.id}}">{{tg.username}}</a><i class="icon_rz"></i><i class="icon_phone"></i></div>
          <p class="cytg_l_gray">{{tg.usertype}}<span>|</span>{{tg.address}}</p>
        </div>
      </div>
      <div class="cytg_r">
        <button>快速沟通</button>
        <button>雇佣TA</button>
      </div>
    </li>
    {{/each}}
    </script>
}
